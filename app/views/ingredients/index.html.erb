<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>All Ingredients</h1>
      <ul class="list-group">
        <% @ingredients.each do |ingredient| %>
          <li class="list-group-item">
            <%= link_to ingredient.name, ingredient_path(ingredient) %>
          </li>
        <% end %>
      </ul>
      <%= link_to "Add a new Ingredient", new_ingredient_path, class: 'btn btn-primary' %>
      <%= link_to "See all cocktails", cocktails_path, class: 'btn btn-success'%>
    </div>
  </div>
</div>
